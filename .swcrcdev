[
  {
    "test": ".*\\.js$",
    "jsc": {
      "parser": {
        "syntax": "ecmascript"
      }
    }
  },
  {
    "test": ".*\\.jsx$",
    "jsc": {
      "parser": {
        "syntax": "ecmascript",
        "jsx": true
      },
      "transform": {
        "react": {
          "runtime": "automatic",
          "development": true,
          "refresh": true
        }
      }
    }
  }
]
